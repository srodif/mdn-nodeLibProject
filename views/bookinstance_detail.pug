extends layout

block content

  h1 ID: #{bookinstance._id}

  p #[strong Title: ]
    a(href=bookinstance.book.url) #{bookinstance.book.title}
  p #[strong Imprint: ] #{bookinstance.imprint}

  p #[strong Status: ]
    if bookinstance.copyStatus=='Available'
      p.text-success #{bookinstance.copyStatus}
    else if bookinstance.copyStatus=='Maintenance'
      p.text-danger #{bookinstance.copyStatus}
    else
      p.text-warning #{bookinstance.copyStatus}

      
  if bookinstance.copyStatus!='Available'
    p #[Strong Due back: ] #{bookinstance.due_back_formatted}

  hr
  p
    a(href=bookinstance.url+'/delete') Delete Copy
  p
    a(href=bookinstance.url+'/update') Update Copy